i_histPP := i_histPP and (i_fibTool == 'Pivot Points' or i_fibTool == 'Extensions + Pivot Points' or i_fibTool == 'Retracements + Pivot Points')

plot(i_histPP and show_0 ? math.avg(htf_h1, htf_l1, htf_c1) : na, 'PP', bool(ta.change(time(htf))) ? na : color_0, editable = false, display = display)
plot(i_histPP and show_0_236 ? math.avg(htf_h1, htf_l1, htf_c1) - (htf_h1 - htf_l1) * value_0_236 : na, 'PP 0_236', bool(ta.change(time(htf))) ? na : color_0_236, 1, plot.style_cross, editable = false, display = display)
