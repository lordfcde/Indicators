plot(i_histPP and show_3_618 ? math.avg(htf_h1, htf_l1, htf_c1) + (htf_h1 - htf_l1) * value_3_618 : na, 'PP 3_618', bool(ta.change(time(htf))) ? na : color_3_618, 1, plot.style_cross, editable = false, display = display)


// ---------------------------------------------------------------------------------------------- //
// Volatility AddOns

group_vol_vol = 'Volatility AddOns'

tooltip_high_volatility =
 'High Volatility Detection\n\n' +
 'Identifies bars where price expansion is unusually large relative to recent volatility.\n\n' +
 'A high-volatility bar is detected when:\n' +
 'â€¢ Current bar range > (ATR Ã— Multiplier)\n\n' +
 'Such conditions often accompany breakouts, news-driven moves, or volatility regime shifts.'

i_hATRLb = input.bool(true, 'âš¡ High Volatility Detection', group = group_vol_vol, tooltip = tooltip_high_volatility)
i_weightedATR =
     ta.atr(
         input.int(13, 'â€ƒâ€ƒATR Length', inline = 'ATR', group = group_vol_vol, display = display)
     ) * input.float(2.718, 'Multiplier', minval = .1, step = .1, inline = 'ATR', group = group_vol_vol, display = display)


// ---------------------------------------------------------------------------------------------- //
// Volume AddOns

group_vol = 'Volume AddOns'

i_vSMA = ta.sma(
     nz(volume),
     input.int(89, 'Volume Moving Average Length', group = group_vol, display = display)
)

tooltip_volume_spike_sign_of_exhaustion =
 'Volume Spike Â· Potential Exhaustion\n\n' +
 'Highlights moments where volume expands significantly relative to its moving average.\n\n' +
 'A spike is detected when:\n' +
 'â€¢ Current volume > (Volume MA Ã— Threshold)\n\n' +
 'These events often occur near climactic moves, exhaustion points, or strong participation surges.'

i_vSpikeLb = input.bool(true, 'ðŸš¦ Volume Spike Â· Potential Exhaustion', group = group_vol, tooltip = tooltip_volume_spike_sign_of_exhaustion)
i_vSpikeThresh = input.float(4.669, 'â€ƒâ€ƒVolume Spike Threshold', minval = .1, step = .1, group = group_vol, display = display)


tooltip_volume_weighted_colored_bars =
 'Volume-Weighted Colored Bars\n\n' +
 'Colors price bars based on relative volume intensity.\n\n' +
 'Bar colors indicate:\n' +
 'â€¢ High participation (above average volume)\n' +
 'â€¢ Normal participation\n' +
 'â€¢ Low participation (below average volume)\n\n' +
 'Helps visually confirm momentum, conviction, and participation behind price movement.'

i_vwcb = input.bool(true, 'Volume-Weighted Colored Bars', group = group_vol, tooltip = tooltip_volume_weighted_colored_bars)
i_vwcbHighThresh = input.float(1.618, 'â€ƒâ€ƒVolume Threshold: High', minval = 1., step = .1, inline = 'VWC', group = group_vol, display = display)
i_vwcbLowThresh  = input.float(0.618, 'Low',  minval = .1, step = .1, inline = 'VWC', group = group_vol, display = display)


nzVolume = nz(volume)
bullCandle = close > open
bearCandle = close < open
range_1 = math.abs(high - low)

exhaustVol = nzVolume > i_vSpikeThresh * i_vSMA
plotchar(i_vSpikeLb and bool(nzVolume) ? exhaustVol : false, 'Exhaustion Bar', 'ðŸš¦', location.abovebar, size = size.tiny, editable = false, display = display)
alertcondition(ta.crossover(nzVolume, i_vSMA * i_vSpikeThresh), 'Volume Spikes', 'sign of exhaustion, huge volume increase detected\n{{exchange}}:{{ticker}}->\nOpen = {{open}}, Current = {{close}},\nTime = {{time}}')

highVolatility = range_1 > i_weightedATR
plotchar(i_hATRLb ? highVolatility : false, 'High Volatile Bar', 'âš¡', location.belowbar, size = size.tiny, editable = false, display = display)
alertcondition(ta.crossover(range_1, i_weightedATR), 'High Volatility', 'high volatility detected\n{{exchange}}:{{ticker}}->\nOpen = {{open}}, Current = {{close}},\nTime = {{time}}')

vwcbCol = nzVolume > i_vSMA * i_vwcbHighThresh ? bullCandle ? #006400 : #910000 : nzVolume < i_vSMA * i_vwcbLowThresh ? bearCandle ? #FF9800 : #7FFFD4 : na

barcolor(i_vwcb and bool(nzVolume) ? vwcbCol : na, title = 'Volume Weighted Colored Bars', editable = false)

// ---------------------------------------------------------------------------------------------- //

var table logo = table.new(position.bottom_right, 1, 1)
table.cell(logo, 0, 0, 'â˜¼â˜¾  ', text_size = size.normal, text_color = color.teal)
