plot(i_histPP and show_0_65 ? math.avg(htf_h1, htf_l1, htf_c1) + (htf_h1 - htf_l1) * value_0_65 : na, 'PP 0_65 ', bool(ta.change(time(htf))) ? na : color_0_65, 1, plot.style_cross, editable = false, display = display)
