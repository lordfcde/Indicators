zzSwings  = input.bool(true, 'Zig Zag Swing, ', inline = 'ZZ2', group = group_zigzag, tooltip = tooltip_zz_swings)
pHighC     = input.color(#d4a5a5, 'Highs', inline='ZZ2', group=group_zigzag)
pLowC     = input.color(#8faadc, 'Lows', inline='ZZ2', group=group_zigzag)
